@model ClothingShop.Models.Product

@using (Html.BeginForm(actionName: "Edit", controllerName: "Products"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <br />
    @Html.HiddenFor(m => m.Id)
    @Html.Label("Title", "Titlu Produsului")
    <br />
    @Html.EditorFor(m => m.Title)
    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Description", "Descrierea Produsului")
    <br />
    @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Price", "Pretul Produsului")
    <br />
    @Html.Editor("Price", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
    <label>Selectati categoria</label>
    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"), "Selectati categoria", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
    <br />
    <button class="btn btn-sm btn-success" type="submit">Modifica produs</button>
}