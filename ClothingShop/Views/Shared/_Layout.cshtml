<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("The Clothing Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand font-logo" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Produse", "Index", "Products")</li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Afisare categorii", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Produse inactive", "Approve", "Products")</li>
                        <li>@Html.ActionLink("Afisare utilizatori", "Index", "Users")</li>
                    }
                    @if(User.IsInRole("Admin") || User.IsInRole("Contributor") || User.IsInRole("User"))
                    {
                    <a href="/Basket/Index" class="btn btn-info btn-lg">
                        <span class="glyphicon glyphicon-shopping-cart"></span>
                    </a>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
